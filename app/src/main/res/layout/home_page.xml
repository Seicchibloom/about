<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:foregroundTint="#403838"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="413dp"
        android:layout_height="734dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <SearchView
                android:id="@+id/searchView"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="#FFFFFF">

            </SearchView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="344dp"
                    android:layout_height="113dp"
                    android:background="#CECECECE"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/accomodationsicon"
                        android:layout_width="66dp"
                        android:layout_height="59dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        app:srcCompat="@drawable/accomodations" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="58dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:srcCompat="@drawable/attractions" />

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="52dp"
                        android:layout_height="59dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:srcCompat="@drawable/carrentalsicon" />

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="59dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:srcCompat="@drawable/toursicon" />

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="80dp"
                        android:layout_height="89dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:srcCompat="@drawable/transporticon" />

                </RadioGroup>

            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Suggested Place"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="30dp"
                android:layout_marginLeft="30dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="130dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="152dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:srcCompat="@drawable/caviteskyranch" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="177dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:srcCompat="@drawable/chocohills" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="185dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:srcCompat="@drawable/puerto" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Popular Now"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="30dp"
                android:layout_marginLeft="30dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="165dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:srcCompat="@drawable/manilabay" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="173dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        app:srcCompat="@drawable/tagaytay" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="172dp"
                        android:layout_height="132dp"
                        android:clickable="true"
                        app:srcCompat="@drawable/siargao" />
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

