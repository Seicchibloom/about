<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-28dp"
    android:background="@drawable/gradient">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="662dp"
        android:layout_height="247dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/manila" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:background="@drawable/roundcorner"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.745"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.093" />

    <Button
        android:id="@+id/button2"
        android:layout_width="42dp"
        android:layout_height="35dp"
        android:background="@drawable/back_icon"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/searchView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.094" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="146dp"
        android:layout_height="25dp"
        android:background="#00FFFFFF"
        android:text="Name of place"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintVertical_bias="0.084" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="148dp"
        android:layout_height="23dp"
        android:background="@drawable/roundcorner"
        android:backgroundTint="#B5FFFFFF"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.012" />

    <ScrollView
        android:layout_width="408dp"
        android:layout_height="558dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/cabin_condensed_bold"
                android:text="   Tours and experiences"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="#434141"
                android:textSize="24sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="213dp"
                        android:layout_height="135dp"
                        app:srcCompat="@drawable/manilamuseum" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="235dp"
                        android:layout_height="146dp"
                        app:srcCompat="@drawable/enchantedkingdom" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="255dp"
                        android:layout_height="136dp"
                        app:srcCompat="@drawable/manilaoceanpark" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="242dp"
                        android:layout_height="125dp"
                        app:srcCompat="@drawable/manilazoo" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="287dp"
                        android:layout_height="169dp"
                        app:srcCompat="@drawable/starcity" />

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/cabin_condensed_bold"
                android:text="   Places to Explore in Luzon"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="#434141"
                android:textSize="24sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="409dp"
                android:layout_height="120dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="227dp"
                        android:layout_height="146dp"
                        app:srcCompat="@drawable/aguinaldoshrine" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="218dp"
                        android:layout_height="152dp"
                        app:srcCompat="@drawable/ifugao" />

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="219dp"
                        android:layout_height="138dp"
                        app:srcCompat="@drawable/ilocossur" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="198dp"
                        android:layout_height="124dp"
                        app:srcCompat="@drawable/batanes" />

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="242dp"
                        android:layout_height="161dp"
                        app:srcCompat="@drawable/palawanisland" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/cabin_condensed_bold"
                android:text="   Places to Explore in Visayas"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="#434141"
                android:textSize="24sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="231dp"
                        android:layout_height="134dp"
                        app:srcCompat="@drawable/v_bohol" />

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="253dp"
                        android:layout_height="172dp"
                        app:srcCompat="@drawable/v_boracay" />

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="231dp"
                        android:layout_height="144dp"
                        app:srcCompat="@drawable/v_boholcave" />

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="207dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/v_iloilo" />

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="212dp"
                        android:layout_height="149dp"
                        app:srcCompat="@drawable/v_siquijor" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/cabin_condensed_bold"
                android:text="   Places to Explore in Mindanao"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="#434141"
                android:textSize="24sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="234dp"
                        android:layout_height="139dp"
                        app:srcCompat="@drawable/m_camiguin" />

                    <ImageView
                        android:id="@+id/imageView18"
                        android:layout_width="216dp"
                        android:layout_height="149dp"
                        app:srcCompat="@drawable/m_dinagat" />

                    <ImageView
                        android:id="@+id/imageView19"
                        android:layout_width="188dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/m_lakesebu" />

                    <ImageView
                        android:id="@+id/imageView20"
                        android:layout_width="233dp"
                        android:layout_height="156dp"
                        app:srcCompat="@drawable/m_siargao" />

                    <ImageView
                        android:id="@+id/imageView21"
                        android:layout_width="237dp"
                        android:layout_height="177dp"
                        app:srcCompat="@drawable/m_surigao" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="___"
                android:textColor="#00FFFFFF"
                android:textSize="96sp" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
